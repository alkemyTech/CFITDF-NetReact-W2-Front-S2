{
    "compilerOptions": {
        "baseUrl": "src",
        "paths": {
            "components/*": [ "components/*" ]
        },
        // otros options importantes:
        "jsx": "react-jsx",
        "moduleResolution": "node",
        "target": "esnext",
        "module": "esnext",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [ "src" ]
}